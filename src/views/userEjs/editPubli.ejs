<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edite Profile</title>
    <link rel="stylesheet" href="../../../userCss/editPubli.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
    <div id="div-pai">
        <nav id="navBar">
            <a href="/homePage">
                <div id="div-logo">
                </div>
            </a>
            <div id="div-links">
                <p id="p-links"><a href="#">Pages</a></p>
                <p id="p-links"><a href="#">Groups</a></p>
                <p id="p-links"><a href="/profile">Profile</a></p>
                <p id="p-links"><a href="/logout">Logout</a></p>
                <div id="div-pesquisa">
                    <i class="material-icons">search</i>
                </div>
            </div>
        </nav>

        <section id="section-container">            
            <div id="publications">
                <h1 id="h1-publi">EDIT YOUR PUBLICATION</h1>
                <form action="/editprofile" method="post">
                    <input type="hidden" name="id" value="<%= idPego %>">
                    <input type="text" name="title" id="ititle" placeholder="Your Title here">

                    <textarea id="publication-area" name="publiBody" placeholder="Your publication here">

                    </textarea>
                    <button id="btt-edit">EDIT</button>
                </form>
            </div>
        </section>

        <!--FOOTER-->
        <footer>
            <p id="p-footer">2024 by Vinicius Rodrigues &copy</p>
        </footer>
    </div>


    <script src="/tinymce/tinymce.min.js"></script>
    <script>
        tinymce.init({
            language: 'pt_BR',
            selector: '#publication-area', 
            plugins:[
                'advlist',
                'autolink',
                'link',
                'image',
                'lists',
                'preview',
                'searchreplace',
                'wordcount',
                'fullscreen',
                'insertdatetime',
                'media',
                'save',
                'table',
                'emoticons'
            ],
        })
    </script>
</body>
</html>